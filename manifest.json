{
  "manifest_version": 2,
  "name": "Web2EPUB",
  "version": "1.0.0",
  "description": "Extraire le contenu d'articles web et les convertir en EPUB",

  "browser_specific_settings": {
    "gecko": {
      "id": "web2epub@cyril5c.github.io"
    }
  },

  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "contextMenus",
    "<all_urls>"
  ],

  "commands": {
    "add-and-show": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Ajouter l'article Ã  la compilation et afficher la popup"
    }
  },

  "background": {
    "scripts": ["lib/jszip.min.js", "background.js"]
  },

  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "Web2EPUB - Compilation",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    "lib/*.js"
  ],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
