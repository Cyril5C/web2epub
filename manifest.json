{
  "manifest_version": 2,
  "name": "Web2EPUB",
  "version": "1.0.0",
  "description": "Extraire le contenu d'articles web et les convertir en EPUB",

  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["lib/jszip.min.js", "background.js"]
  },

  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "Save to EPUB"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    "lib/*.js"
  ],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
